# LLM Provider Configuration
# Choose one: anthropic, openai, gemini
LLM_PROVIDER=anthropic

# API Keys (at least one required)
ANTHROPIC_API_KEY=sk-ant-your-key-here
OPENAI_API_KEY=sk-your-key-here
GEMINI_API_KEY=your-key-here

# Authentication
# Comma-separated list of valid bearer tokens
# Generate tokens using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
AUTH_TOKENS=your-secret-token-1,your-secret-token-2

# Optional: Database (if you want to persist processed articles)
# DATABASE_URL=postgres://user:pass@host:5432/dbname

# Optional: Logging level
# LOG_LEVEL=info
